<Page
    x:Class="Kiwi_TV.Views.Feedback"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kiwi_TV.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:Name="EmailBox" PlaceholderText="Email (Optional)" Width="200" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" ></TextBox>
        <StackPanel Orientation="Horizontal" Margin="10">
            <RadioButton x:Name="SuggestButton" Content="Suggest" HorizontalAlignment="Left" VerticalAlignment="Top" IsChecked="True"/>
            <RadioButton x:Name="LikeButton" Content="Like" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <RadioButton x:Name="DislikeButton" Content="Dislike" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </StackPanel>
        <TextBox x:Name="FeedbackBox" Height="200" Margin="10" PlaceholderText="Feedback..."></TextBox>
        <Button x:Name="SubmitButton" Content="Submit" HorizontalAlignment="Right" Margin="10" Click="SubmitButton_Click"></Button>
    </StackPanel>
</Page>
