<Page
    x:Class="Kiwi_TV.Views.AddChannel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kiwi_TV.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../KiwiTVStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid MaxWidth="750" HorizontalAlignment="Stretch">
        <ScrollViewer Grid.Row="1" Margin="10" BorderThickness="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Pivot Name="MainPivot" SelectedIndex="{Binding MainPivotSelectedIndex, Mode=TwoWay}">

                    <!--Twitch Pivot -->
                    <PivotItem Header="Twitch.tv" Name="TwitchPivotItem">
                        <StackPanel>
                            <TextBlock Text="Add a channel from Twitch.tv.  Just type something like 'mlg' to get started." TextWrapping="WrapWholeWords" Margin="0,0,0,10"/>
                            <TextBlock Text="Search" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBox x:Name="TwitchSearch" Text="{Binding TwitchSearchText, Mode=TwoWay}" Margin="10" PlaceholderText="Search" TextChanged="TwitchSearch_TextChanged"/>
                            <GridView Name="TwitchChannelsGridView" ItemsSource="{Binding TwitchChannels, Mode=TwoWay}">
                                <GridView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Width="150" Height="150" BorderThickness="1,1,2,2" BorderBrush="Gray" Margin="5" Background="White" >
                                            <Image Source="{Binding Logo}" VerticalAlignment="Top" ToolTipService.ToolTip="{Binding DisplayName}"/>
                                            <CheckBox x:Name="FavoriteCheckBox" IsChecked="False" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,-45,0" Height="32" Width="32" Style="{StaticResource FavoriteCheckBox}"></CheckBox>
                                            <CheckBox x:Name="LiveCheckBox" IsChecked="True" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="32" Width="32" Margin="0,8,-45,0" IsEnabled="False" Style="{StaticResource LiveCheckBox}"></CheckBox>
                                        </Grid>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                            <TextBlock Text="Fields" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <AutoSuggestBox x:Name="TwitchCategory" Text="{Binding TwitchCategoryText, Mode=TwoWay}" Height="32" Margin="10" GotFocus="CustomCategory_GotFocus" LostFocus="CustomCategory_LostFocus" PlaceholderText="Category" Grid.Column="0" />
                                <AutoSuggestBox x:Name="TwitchLanguage" Text="{Binding TwitchLanguageText, Mode=TwoWay}" Height="32" Margin="10" GotFocus="CustomLanguage_GotFocus" LostFocus="CustomLanguage_LostFocus" PlaceholderText="Language" Grid.Column="1" />
                            </Grid>
                            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                                <Button x:Name="AddTwitchButton" Content="Add Channel" HorizontalAlignment="Right" Margin="10" Click="AddTwitchButton_Click"/>
                                <Button x:Name="TestTwitchButton" Content="Test Channel" HorizontalAlignment="Right" Margin="10" Click="TestTwitchButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </PivotItem>
                    
                    <!--Custom Pivot -->
                    <PivotItem Header="Custom Channel" Name="CustomPivotItem">
                        <StackPanel>
                            <TextBlock Text="Add channel from custom source.  This can be any available .m3u8, .mkv or .mp4 stream on the internet." TextWrapping="WrapWholeWords" Margin="0,0,0,10"/>
                            <TextBlock Text="Preview" FontWeight="Bold" Margin="0,0,0,10"/>
                            <GridView Name="CustomChannelsGridView">
                                <GridView.Items>
                                    <Grid Width="150" Height="150" Background="White" BorderThickness="1,1,2,2" BorderBrush="Gray" Margin="5">
                                        <Image Name="CustomImage" Source="{Binding ElementName=CustomImageURL, Path=Text}"/>
                                        <CheckBox x:Name="FavoriteCheckBox" IsChecked="False" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,-45,0" Height="32" Width="32" Style="{StaticResource FavoriteCheckBox}"></CheckBox>
                                        <CheckBox x:Name="LiveCheckBox" IsChecked="True" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="32" Width="32" Margin="0,8,-45,0" IsEnabled="False" Style="{StaticResource LiveCheckBox}"></CheckBox>
                                    </Grid>
                                </GridView.Items>
                            </GridView>
                            <TextBlock Text="Fields" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBox x:Name="CustomName" Text="{Binding CustomNameText, Mode=TwoWay}" Margin="10" PlaceholderText="Channel Name" Grid.Column="0"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <AutoSuggestBox x:Name="CustomCategory" Text="{Binding CustomCategoryText, Mode=TwoWay}" Height="32" Margin="10" GotFocus="CustomCategory_GotFocus" LostFocus="CustomCategory_LostFocus" PlaceholderText="Category" Grid.Column="0" />
                                <AutoSuggestBox x:Name="CustomLanguage" Text="{Binding CustomLanguageText, Mode=TwoWay}" Height="32" Margin="10" GotFocus="CustomLanguage_GotFocus" LostFocus="CustomLanguage_LostFocus" PlaceholderText="Language" Grid.Column="1" />
                            </Grid>
                            <TextBox x:Name="CustomSourceURL" Text="{Binding CustomSourceURLText, Mode=TwoWay}" Margin="10" PlaceholderText="Video Source URL" />
                            <TextBox x:Name="CustomImageURL" Text="{Binding CustomImageURLText, Mode=TwoWay}" Margin="10" PlaceholderText="Channel Logo URL" />
                            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                                <Button x:Name="AddCustomButton" Content="Add Channel" HorizontalAlignment="Right" Margin="10" Click="AddCustomButton_Click"/>
                                <Button x:Name="TestCustomButton" Content="Test Channel" HorizontalAlignment="Right" Margin="10" Click="TestCustomButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </PivotItem>
                </Pivot>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
