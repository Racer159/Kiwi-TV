<Page
    x:Class="Kiwi_TV.Views.AddChannel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kiwi_TV.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../KiwiTVStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid MaxWidth="750" HorizontalAlignment="Stretch">
        <Pivot Name="MainPivot">
            <PivotItem Header="Custom" Name="CustomPivotItem">
                <StackPanel Margin="5">
                    <TextBlock Text="Add a channel from a custom source.  This can be any freely available .m3u8 or .mp4 stream on the internet." TextWrapping="WrapWholeWords" Margin="0,0,0,10"/>
                    <TextBlock Text="Preview:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <GridView Name="CustomChannelsGridView" Tapped="CustomChannelsGridView_Tapped">
                        <GridView.Items>
                            <Grid Width="150" Height="150" Background="White" BorderThickness="1,1,2,2" BorderBrush="Gray" Margin="5">
                                <Image Name="CustomImage" Source="{Binding ElementName=CustomImageURL, Path=Text}"/>
                                <CheckBox x:Name="FavoriteCheckBox" IsChecked="False" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,-45,0" Height="32" Width="32" Style="{StaticResource FavoriteCheckBox}"></CheckBox>
                                <CheckBox x:Name="LiveCheckBox" IsChecked="True" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="32" Width="32" Margin="0,8,-45,0" IsEnabled="False" Style="{StaticResource LiveCheckBox}"></CheckBox>
                            </Grid>
                        </GridView.Items>
                    </GridView>
                    <TextBlock Text="Fields:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="CustomName" Margin="10" PlaceholderText="Channel Name" Grid.Column="0"/>
                        <AutoSuggestBox x:Name="CustomCategory" Height="32" Margin="10" GotFocus="CustomCategory_GotFocus" LostFocus="CustomCategory_LostFocus" PlaceholderText="Category" Grid.Column="1"/>
                        <AutoSuggestBox x:Name="CustomLanguage" Height="32" Margin="10" GotFocus="CustomLanguage_GotFocus" LostFocus="CustomLanguage_LostFocus" PlaceholderText="Language" Grid.Column="2"/>
                    </Grid>
                    <TextBox x:Name="CustomSourceURL" Margin="10" PlaceholderText="Video Source URL"></TextBox>
                    <TextBox x:Name="CustomImageURL" Margin="10" PlaceholderText="Channel Logo URL"></TextBox>
                    <Button x:Name="AddCustomButton" Content="Add Channel" HorizontalAlignment="Right" Margin="10" Click="AddCustomButton_Click"/>
                </StackPanel>
            </PivotItem>
            <PivotItem Header="Twitch" Name="TwitchPivotItem">
                <StackPanel Margin="5">
                    <TextBlock Text="Add a channel from Twitch." />
                </StackPanel>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
