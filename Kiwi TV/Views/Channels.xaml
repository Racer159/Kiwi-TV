<Page
    x:Class="Kiwi_TV.Views.Channels"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kiwi_TV.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:gif="using:XamlAnimatedGif"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../KiwiTVStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid x:Name="MainChannelsGrid" SizeChanged="MainChannelsGrid_SizeChanged">
        <StackPanel Orientation="Horizontal" Margin="0,-48,0,0">
            <TextBlock Name="TitleText" Padding="14,14,0,0" FontWeight="Bold" Text="All Channels"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,-48,0,0" Height="48" VerticalAlignment="Top" Background="{ThemeResource AppBarBackgroundThemeBrush}">
            <Grid VerticalAlignment="Top" HorizontalAlignment="Right" Name="ChannelFilters">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="160"></ColumnDefinition>
                    <ColumnDefinition x:Name="SearchBoxGridWidth" Width="260"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Background="#ffcdcdcd" Height="40" Margin="5,4" HorizontalAlignment="Stretch" Grid.Column="1" Visibility="{Binding ElementName=LanguagesBox, Path=Visibility}">
                    <ComboBox x:Name="LanguagesBox" Height="40" SelectionChanged="LanguagesBox_SelectionChanged" BorderThickness="0" Padding="9" LostFocus="SearchBox_LostFocus" HorizontalAlignment="Stretch" >
                        <ComboBoxItem IsSelected="True">All Languages</ComboBoxItem>
                    </ComboBox>
                </Grid>
                <TextBox x:Name="SearchBox" Background="#ffcdcdcd" Height="40" TextAlignment="Left" Margin="5,4" TextChanged="SearchBox_TextChanged" BorderThickness="0" Padding="9" PlaceholderText="Search" LostFocus="SearchBox_LostFocus" HorizontalAlignment="Stretch" Grid.Column="2"/>
            </Grid>
            <AppBarButton x:Name="SearchButton" FontFamily="Segoe MDL2 Assets" Height="48" Width="48" Visibility="Collapsed" Click="SearchButton_Click">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE71E;"/>
                </AppBarButton.Icon>
            </AppBarButton>
        </StackPanel>
        
        <Grid Name="GridViewIconSize" Tag="150" />

        <ScrollViewer Grid.Row="1" Padding="20" BorderThickness="0" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Image Name="LoadingSpinner" gif:AnimationBehavior.SourceUri="ms-appx:///Assets/Loading.gif" Height="64" Width="64" Margin="10" Visibility="Visible" VerticalAlignment="Center"/>
                <StackPanel>
                    <TextBlock Name="NoContentHeader" Text="You currently don't have any favorites, try adding some from the channel list to get started." Visibility="Collapsed" TextWrapping="WrapWholeWords"/>
                    <TextBlock Name="NoSearchHeader" Text="No channels found for your search." Visibility="Collapsed" TextWrapping="WrapWholeWords"/>

                    <ItemsControl Name="CategoriesItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Name="CategoryHeader" Text="{Binding Name}" FontSize="24" FontWeight="SemiLight" Margin="0,0,0,10"/>
                                    <GridView Name="ChannelsGridView" SelectionChanged="ChannelsGridView_SelectionChanged" ItemsSource="{Binding Path=Channels, Mode=OneWay}" ScrollViewer.VerticalScrollMode="Disabled">
                                        <GridView.ItemTemplate>
                                            <DataTemplate>
                                                <Border RightTapped="Border_RightTapped" Tag="{Binding}">
                                                    <Grid Width="{Binding ElementName=GridViewIconSize, Path=Tag}" Height="{Binding ElementName=GridViewIconSize, Path=Tag}" BorderThickness="1,1,2,2" BorderBrush="Gray" Margin="5" Background="White">
                                                        <TextBlock Foreground="Gray" Text="{Binding Name}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                        <Image Source="{Binding Icon}" VerticalAlignment="Top" ToolTipService.ToolTip="{Binding Name}" />
                                                        <CheckBox x:Name="FavoriteCheckBox" IsChecked="{Binding Favorite}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,-45,0" Height="32" Width="32" Click="FavoriteCheckBox_Checked" Style="{StaticResource FavoriteCheckBox}" Tag="{Binding Name}"></CheckBox>
                                                        <CheckBox x:Name="LiveCheckBox" IsChecked="{Binding Path=Live, UpdateSourceTrigger=Explicit, Mode=OneWay}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="32" Width="32" Margin="0,8,-45,0" IsEnabled="False" Style="{StaticResource LiveCheckBox}"></CheckBox>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </GridView.ItemTemplate>
                                    </GridView>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
